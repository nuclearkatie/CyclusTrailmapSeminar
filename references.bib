@article{ellinas_women_2018,
	title = {Women and the {Decision} to {Leave}, {Linger}, or {Lean} {In}: {Predictors} of {Intent} to {Leave} and {Aspirations} to {Leadership} and {Advancement} in {Academic} {Medicine}},
