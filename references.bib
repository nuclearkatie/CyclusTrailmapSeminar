	journal = {Annals of Nuclear Energy},
	author = {Zhang, Guanheng and Fratoni, Massimiliano and Greenspan, Ehud},
	month = feb,
	year = {2018},
	keywords = {Breed-and-Burn concept, Fuel cycle analysis, Sodium-cooled fast reactor, Thorium fuel},
